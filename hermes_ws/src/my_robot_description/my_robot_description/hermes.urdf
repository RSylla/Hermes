<?xml version="1.0"?>
<robot name="hoverboard_robot">

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.2 0.1"/> </geometry>
    </visual>
  </link>

  <link name="left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/> </geometry>
    </visual>
  </link>

  <joint name="left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <origin xyz="-0.2 0 0" /> <axis xyz="0 1 0"/> 
  </joint>

  <link name="right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.05"/> </geometry>
    </visual>
  </link>

  <joint name="right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="right_wheel"/> <origin xyz="0.2 0 0" /> 
    <axis xyz="0 1 0"/> 
  </joint> 
  
</robot>