<?xml version="1.0" ?>
<robot name="hoverboard">

  <!-- Define the material -->
  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <!-- Define the link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.5 0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.5 0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Define the wheel -->
  <link name="wheel_link">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Define the joint connecting base_link and wheel_link -->
  <joint name="wheel_joint" type="revolute">
    <parent link="base_link"/>
    <child link="wheel_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="10" velocity="3"/>
  </joint>

</robot>
