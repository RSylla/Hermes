<?xml version="1.0"?>
<robot name="my_articulated_robot">

  <link name="base_link">
    </link>

  <joint name="left_motor_joint" type="continuous">
    <parent link="base_link"/>
    <child link="left_wheel"/>
    </joint>

  <joint name="right_motor_joint" type="continuous">
    </joint>

  <link name="trailer_link">
    </link>

  <joint name="base_to_trailer_pivot" type="revolute">
    <parent link="base_link"/>
    <child link="trailer_link"/>
    <origin xyz="0 0 1.0" rpy="0 0 0" /> <axis xyz="0 1 0" />
    <limit lower="-3.14159" upper="3.14159" effort="1000.0" velocity="3.0"/>
    </joint>

</robot>