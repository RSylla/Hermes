<launch>
    <!-- Declare a launch argument for the GUI -->
    <arg name="gui" default="true" />

    <!-- Load URDF -->
    <param name="robot_description" command="/home/hermes/Hermes/hermes_ws/src/hermes_urdf/urdf/hermes.urdf" />
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />

    <!-- Joint State Publisher -->
    <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui" if="$(arg gui)" />
